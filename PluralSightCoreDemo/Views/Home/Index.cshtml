@model HomeIndexViewModel;

@{
    ViewBag.Title = "Home page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/rest1.jpg" alt="rest1">
        </div>

        <div class="item">
            <img src="~/rest2.jpg" alt="rest2">
        </div>

        <div class="item">
            <img src="~/rest3.jpg" alt="rest3">
        </div>
        <div class="item">
            <img src="~/rest4.jpg" alt="rest4">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



<h2>All Restaurants</h2>

@if (Model.Restourants != null)
{
    <div class="container">
        @foreach (var restaurant in Model.Restourants)
        {
            <div class="row">
                <div class="col-md-1">@restaurant.Id</div>
                <div class="col-md-3">@restaurant.Name</div>
                <div class="col-md-2"><a class="btn bnt-defaut" asp-action="Details" asp-route-id="@restaurant.Id">Details</a></div>
            </div>
        }
    </div>
}
else
{
    <h2>No restaurants to show</h2>
}

<a class="btn bnt-defaut" asp-controller="Home" asp-action="Create">Add new Restaurant</a>


@section footer{
    @Model.CurrentMessage
}
