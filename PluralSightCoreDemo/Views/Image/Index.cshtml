@model IEnumerable<Image>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<div class="container">
    @if (Model != null)
    {
        @foreach (var img in Model)
        {
            var base64 = Convert.ToBase64String(img.ImageData);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            
            <div class="row">
                <div class="col-md-1">@img.Id</div>
                <div class="col-md-3"><img src="@imgSrc" alt="image" style="height:200px;width:200px; border-radius:500px" /></div>
                <div class="col-md-1"><a class="btn bnt-defaut" asp-action="RemoveImage" asp-route-id="@img.Id" asp-controller="Image">Delete</a></div>
            </div>
        }

    }
    else
    {
        <h2>No Images</h2>
    }
</div>

<a class="btn bnt-defaut" asp-controller="Image" asp-action="UploadImage">Upload new image</a>

