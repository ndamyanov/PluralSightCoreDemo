
@{
    ViewData["Title"] = "UploadImage";
}

<h2>UploadImage</h2>

<form method="post" class="form" enctype="multipart/form-data" asp-controller="Image" asp-action="UploadImage" style="background-color:ghostwhite">
    <div class="form-group">
        <div class="col-md-8">
            <p>Upload files:</p>
            <input type="file" name="file" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-1">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
